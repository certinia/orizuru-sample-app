{
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"files.associations": {
		"*.avro": "json",
		"*.avsc": "json"
	},
	"files.exclude": {
		"**/.nyc_output": true,
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/coverage": true
	},
	"files.insertFinalNewline": true,
	"lcov.path": "coverage/lcov.info",
	"lcov.watch": [
		{
			"pattern": "**/*.js",
			"command": "npm test"
		}
	],
	"runCurrentTest.run": "npm run single-test -- ${relativeTestPath}",
	"terminal.integrated.scrollback": 10000,
	"workbench.colorCustomizations": {
		"activityBar.foreground": "#0C8EFF"
	}
}
